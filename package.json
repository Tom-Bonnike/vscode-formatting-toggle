{
  "name": "vscode-status-bar-format-toggle",
  "displayName": "Formatting Toggle",
  "version": "2.0.0",
  "description": "A VS Code extension that allows you to toggle formatting settings ON and OFF with a simple click.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tom-Bonnike/vscode-formatting-toggle.git"
  },
  "publisher": "tombonnike",
  "author": "Tom Bonnike (bonniketom@gmail.com)",
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/Tom-Bonnike/vscode-formatting-toggle/issues"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=tombonnike.vscode-status-bar-format-toggle",
  "engines": {
    "vscode": "^1.38.0"
  },
  "keywords": [
    "disable",
    "toggle",
    "format",
    "formatting",
    "prettier"
  ],
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "formattingToggle.toggleFormat",
        "title": "Toggle formatting"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Formatting Toggleâ€™s configuration",
      "properties": {
        "formattingToggle.affects": {
          "scope": "resource",
          "type": "array",
          "default": [
            "formatOnPaste",
            "formatOnSave",
            "formatOnType"
          ],
          "description": "The formatting settings the extension should toggle. Affects all formatting events (`formatOnPaste`, `formatOnSave`, `formatOnType`) by default."
        }
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "out"
    ],
    "moduleNameMapper": {
      "vscode": "<rootDir>/src/__mocks__/vscode.ts"
    },
    "testRegex": "spec.ts"
  },
  "scripts": {
    "start": "tsc -watch -p ./",
    "test": "jest --verbose",
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "@types/vscode": "^1.61.0",
    "jest": "^27.0.7",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
